<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <label for="first-name"> First Name:</label><br>
    <%= f.text_field :first_name %><br><br>

  <label for="last-name"> Last Name:</label><br>
    <%= f.text_field :last_name %><br><br>

  <label for="email"> Email:</label><br>
    <%= f.text_field :email %><br><br>

  <label for="password"> Password:</label><br>
    <%= f.password_field :password %><br><br>
  
  <label for="password-confirmation"> Password Confirmation:</label><br>
    <%= f.password_field :password_confirmation %><br><br>

  <label for="submit"> submit</label><br>
  <%= f.submit "Submit" %>

<% end %>